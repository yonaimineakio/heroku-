<li id="micropost-<%= micropost.id %>">
　　
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
   <%= image_tag micropost.image.url if micropost.image? %>
   <%= video_tag micropost.video.url, {:loop => true, :controls => true, :size => '300x300' }if micropost.video?%>
  <% if micropost.comments.count != 0 && comments =  micropost.comments.count   %>
   Comments (<%= comments %>)
  <% end%>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user)%>
    <%= link_to "delete", micropost, method: :delete,  data: { confirm: "You sure?" }%>
    <% elsif !(current_user?(micropost.user))%>
    <%= link_to "leave a comment ", micropost_comments_path(micropost.id)%>
    <% end%>
  </span>

</li>
